  %desc&= DESC
  %defs
    %circle(id="dot" r="6" fill="#333" stroke="none")
  %use(xlink:href="#dot" x="25" y="50")
    %animate{style}(values="0;1;1;1;0")
  %use(xlink:href="#dot" x="50" y="50")
    %animate{style}(values="0;0;1;1;0")
  %use(xlink:href="#dot" x="75" y="50")
    %animate{style}(values="0;0;0;1;0")
